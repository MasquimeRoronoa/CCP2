                <div class="carousel-item active a8">
                    {% for categorie in categories %}
                    <img src="{{ vich_uploader_asset(categorie, "imageFile") }}" style="width: 200px; height: 150px;" class="imgfoot" data-dimension="{{ categorie.DimensionPhoto }}" data-vitesse="{{ categorie.VitessePhoto }}"
                         data-ouverture="{{ categorie.OuverturePhoto }}" data-iso="{{ categorie.IsoPhoto }}" data-focale="{{ categorie.FocalePhoto }}" data-objectif="{{ categorie.ObjectifPhoto }}"
                         data-appareil="{{ categorie.AppareilPhoto }}" data-tech="{{ categorie.techniques.NomTechnique }}" data-photographe="{{ categorie.photographe.NomPhotographe }}" data-photographe2="{{ categorie.photographe.PrenomPhotographe }}">
                    {% endfor %}

                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
            </a>
        </div>

    </footer>


{% endblock %}
